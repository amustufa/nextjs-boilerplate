{
  "name": "nextjs-boilerplate",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prisma:collect": "tsx scripts/prisma-collect.ts",
    "prisma:migrate": "pnpm prisma:collect && prisma migrate dev --schema prisma",
    "prisma:generate": "pnpm prisma:collect && prisma generate --schema prisma",
    "prisma:studio": "prisma studio --schema prisma",
    "prisma:reset": "pnpm prisma:collect && prisma migrate reset --schema prisma --skip-generate --skip-seed",
    "prisma:push": "pnpm prisma:collect && prisma db push --schema prisma",
    "db:prepare": "pnpm prisma:migrate && pnpm prisma:generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --dir modules --dir core",
    "test:unit:watch": "vitest --dir modules --dir core",
    "test:coverage": "vitest run --coverage",
    "test:ui": "playwright test",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "PWDEBUG=1 playwright test",
    "e2e:install": "playwright install --with-deps",
    "check": "pnpm lint && pnpm typecheck && pnpm test",
    "analyze": "ANALYZE=true next build",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "15.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "scheduler": "0.23.0",
    "zod": "^3.23.8",
    "@prisma/client": "^6.7.0",
    "pino": "^9.0.0",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "globals": "^15.12.0",
    "@eslint/eslintrc": "^3.1.0",
    "@next/eslint-plugin-next": "15.2.0",
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.11.30",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "@types/scheduler": "0.16.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import-x": "^4.16.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "prisma": "^6.7.0",
    "tailwindcss": "^3.4.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
